                    <GradientStop Color="#009edd" Offset=".85"></GradientStop>
                    <GradientStop Color="#009edd" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Path.Fill>
        </Path>
        <Ellipse Fill="White"
                 Width="165"
                 Height="170"
                 Canvas.Top="205"
                 Canvas.Left="380"></Ellipse>
        
    </Canvas>
        <TextBox HorizontalAlignment="Center"
                 VerticalAlignment="Bottom"
                 Margin="0,0,0,50"
                 FontSize="18"
                 BorderBrush="Transparent">(1977 - 1998)</TextBox>
        <TextBox HorizontalAlignment="Center"
                 VerticalAlignment="Bottom"
                 Margin="0,0,0,70"
                 FontSize="40"
                 BorderBrush="Transparent">Apple Inc. Rainbow Logo</TextBox>
    </Grid>
</Window>
