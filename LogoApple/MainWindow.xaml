                </Path.Fill>
        </Path>
        <Path Data="M 428,202 
              C428,202 383,157 300,198
              C300,198 283,202 269,196.5
              C272,198 195,150 143,205
              C140,205 50,300 174,456
              C170,454 225,495 264,470
              C264,470 283,455 315,470
              C315,470 355,497 398,453
              C398,453 520,290 428,202">
