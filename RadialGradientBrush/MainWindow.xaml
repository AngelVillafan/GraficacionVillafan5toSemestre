<Window x:Class="RadialGradientBrush.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadialGradientBrush"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>

        <Rectangle Width="400"
                   Height="200"
                   Canvas.Top="10"
                   Canvas.Left="10">
            <Rectangle.Fill>
                <RadialGradientBrush Center="0.5,1" RadiusX=".5" RadiusY="1" GradientOrigin=".5,1">
                    <GradientStop Color="White" Offset=".3"></GradientStop>
                    <GradientStop Color="MediumPurple" Offset=".5"></GradientStop>
                    <GradientStop Color="DeepSkyBlue" Offset=".6"></GradientStop>
                    <GradientStop Color="GreenYellow" Offset=".7"></GradientStop>
                    <GradientStop Color="Yellow" Offset=".8"></GradientStop>
                    <GradientStop Color="red" Offset=".9"></GradientStop>
                    <GradientStop Color="White" Offset="1"></GradientStop>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        
    </Canvas>
</Window>
