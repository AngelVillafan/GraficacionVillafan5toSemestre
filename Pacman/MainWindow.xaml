<Window x:Class="Pacman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pacman"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>

        <!-- Cuerpo de Pacman -->
        <Path Fill="Yellow" 
              Stroke="Black" 
              StrokeThickness="3"  
              Data="M550,150 L400,210 L550,270 A150,150 0 1 1 550,150"></Path>

        <!-- Contorno del ojo -->
        <Ellipse Width="60" 
                 Height="60" 
                 StrokeThickness="2" 
                 Stroke="Black" 
                 Fill="White" 
                 Canvas.Left="430" 
                 Canvas.Top="100"></Ellipse>

        <!-- Iris -->
        <Ellipse Width="40" 
                 Height="40" 
                 StrokeThickness="2" 
                 Fill="Black" 
                 Canvas.Left="440" 
                 Canvas.Top="110"></Ellipse>
        
        <!-- Brillo del ojo -->
        <Ellipse Width="10" 
                 Height="10" 
                 StrokeThickness="2" 
                 Fill="White" 
                 Canvas.Left="440" 
                 Canvas.Top="112"></Ellipse>
    </Canvas>
</Window>
